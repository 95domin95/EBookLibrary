@model EBookLibraryData.Models.ViewModels.LibraryManage.PublisherManageViewModel

@{
    Layout = "_ManageLibraryLayout";
}

<h3>@ViewData["Title"]</h3>
@if (Model.Publishers != null)
{
    <table id="table" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                @foreach (var column in Model.ColumnNames)
                {
                    <th>@column</th>
                }
            </tr>
        </thead>
        <tbody>
            @{ int counter = 0;}
            @foreach (var publisher in Model.Publishers)
            {
                counter = counter + 1;
            <tr>
                <td>@counter</td>
                <td>@publisher.PublisherId</td>
                <td>@publisher.Name</td>
                <td>@publisher.City</td>
                <td>
                    <div class="float-left pl-1 pb-3">
                        <form asp-controller="LibraryManage" asp-action="Publishers" method="post">
                            <button class="btn btn-danger" name="AuthorId" value="@publisher.PublisherId"><span class="fa fa-times"></span></button>
                        </form>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        Brak elementów do wyświetlenia.
    </div>
}