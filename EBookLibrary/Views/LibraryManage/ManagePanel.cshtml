@model EBookLibraryData.Models.ViewModels.LibraryManage.ManagePanelViewModel

@{
    Layout = "_ManageLibraryLayout";
}

<script src="~/js/managePanel.js"></script>
<script src="~/js/pagination.js"></script>
<script src="~/js/doubleInput.js"></script>
<div class="row">
    <div class="col-xs-12">
        <form enctype="multipart/form-data" asp-controller="LibraryManage" asp-action="ManagePanel" method="post" id="manage-books-form">
            <h3>@ViewData["Title"]</h3>
            <div class="form-row">
                <div class="col-xs-12 col-sm-6">
                    <div class="form-group">
                        <label asp-for="BookCovering"></label>
                        <br />
                        <img class="img-fluid p-2" id="book-covering-image"
                             src="~/images/Icons-master/picol_latest_prerelease_svg/document_image_add.svg" />
                        <input asp-for="BookCovering" class="form-control-file" id="book-covering" accept="image/*" />
                        <span asp-validation-for="BookCovering" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="form-group">
                        <label asp-for="Book"></label>
                        <br />
                        <img class="img-fluid p-2" id="book-image"
                             src="~/images/Icons-master/picol_latest_prerelease_svg/book_text_add.svg" />
                        <input asp-for="Book" class="form-control-file" id="book" accept=".pdf" />
                        <span asp-validation-for="Book" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3">
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" id="title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3">
                    <div class="form-group">
                        <label asp-for="OperationType"></label>
                        <select asp-for="OperationType" class="form-control" id="operation-types">
                            @foreach (var i in Model.Operations)
                            {
                                <option value="@i[1]">@i[0]</option>
                            }
                        </select>
                        <span asp-validation-for="OperationType" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3">
                    <div class="form-group">
                        <label asp-for="Id"></label>
                        <input asp-for="Id" class="form-control" id="id" min="0" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3">
                    <div class="form-group">
                        <label asp-for="ISBN"></label>
                        <input asp-for="ISBN" class="form-control" id="isbn" min="0" />
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3">
                    <div class="form-group">
                        <label asp-for="Pages"></label>
                        <input asp-for="Pages" class="form-control" id="pages" min="0" />
                        <span asp-validation-for="Pages" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3">
                    <div class="form-group">
                        <label asp-for="Publisher"></label>
                        <input asp-for="Publisher" class="form-control" id="publisher" />
                        <span asp-validation-for="Publisher" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3">
                    <div class="form-group">
                        <label asp-for="Category"></label>
                        <select asp-for="Category" class="form-control" id="category">
                            <option value=""></option>
                            @foreach (var i in Model.Categories)
                            {
                                <option value="@i.Name">@i.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-3">
                    <div class="form-group">
                        <label asp-for="CopiesCount"></label>
                        <input asp-for="CopiesCount" class="form-control" id="copies-count" min="0" />
                        <span asp-validation-for="CopiesCount" class="text-danger"></span>
                    </div>
                </div>
                @*<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                        <div class="form-group">
                            <label asp-for="Author"></label>
                            <input asp-for="Author" class="form-control" id="author" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                    </div>*@
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="form-group">

                        <select asp-for="Author" class="form-control" id="author" multiple>
                            <option value=""></option>
                            @foreach (var author in Model.Authors)
                            {
                                <option value="@author.Name">@author.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div>
                        <label>Ilość stron</label>
                        <input asp-for="PagesRangeSelected" id="page-range-checked" />
                    </div>
                    <div class="form-group">
                        <div class='multi-range' data-lbound='0' data-ubound='10000'>
                            <hr />
                            <input type='range'
                                   min='0' max='9999' step='1' value='1' class="double-input"
                                   oninput='this.parentNode.dataset.lbound=this.value;' asp-for="PagesMin" id="double-input-min" disabled />
                            <input type='range'
                                   min='1' max='10000' step='1' value='10000' class="double-input"
                                   oninput='this.parentNode.dataset.ubound=this.value;' asp-for="PagesMax" id="double-input-max" disabled />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Zatwierdź</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <h4>Lista książek</h4>
    </div>
</div>
@if (Model.BookSearched)
{
    @if (Model.Books != null)
    {
        <table id="table" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    @foreach (var column in Model.ColumnNames)
                    {
                        <th>@column</th>
                    }
                </tr>
            </thead>
            <tbody>
                @{ int counter = 0;}
                @foreach (var book in Model.Books)
                {
                    counter = counter + 1;
                    <tr>
                        <td>@counter</td>
                        <td><img class="book-covering-image-table" src="~/images/BookCovering/@book.CoveringPath" /></td>
                        <td>@book.BookId</td>
                        <td>@book.Title</td>
                        <td>
                            <div class="float-left pl-1 pb-3">
                                <form asp-controller="Home" asp-action="BookPreview" method="post">
                                    <Button type="submit" class="btn btn-primary" name="BookId" value="@book.BookId"><span class="fa fa-info"></span></Button>
                                </form>
                            </div>
                            <div class="float-left pl-1 pb-3">
                                <form asp-controller="Home" asp-action="ReturnBook" method="post">
                                    <button class="btn btn-danger" name="BookId" value="@book.BookId"><span class="fa fa-times"></span></button>
                                </form>
                            </div>
                        </td>
                        <td>@book.Category</td>
                        <td>@book.LoansCount</td>
                        <td>@book.AddDate</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            @Model.NoElementsMessage
        </div>
    }
}
@if (Model.BookAdded)
{
@if (Model.OperationErrorName != "add")
    {
<div class="alert alert-success" role="alert">
    @Model.BookAddedMessageSuccess
</div>
    }
    else
    {
<div class="alert alert-danger" role="alert">
    @Model.BookAddedMessageError
</div>
    }
}
@if (Model.BookRemoved)
{
@if (Model.OperationErrorName != "remove")
    {
<div class="alert alert-success" role="alert">
    @Model.BookRemovedMessageSuccess
</div>
    }
    else
    {
<div class="alert alert-danger" role="alert">
    @Model.BookRemovedMessageError
</div>
    }
}
@if (Model.BookModified)
{
@if (Model.OperationErrorName != "modify")
    {
<div class="alert alert-success" role="alert">
    @Model.BookModifiedMessageSuccess
</div>
    }
    else
    {
<div class="alert alert-danger" role="alert">
    @Model.BookModifiedMessageError
</div>
    }
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
