@model EBookLibraryData.Models.ViewModels.BooksManage.SelectBookViewModel

<div class="row text-center">
    <div class="col-xs-12 col-sm-10 col-md-6 col-lg-4 col-sm-offset-1 col-md-offset-3 col-lg-offset-4">
        <form asp-controller="BooksManage" asp-action="ManagePanel" method="post">
            <h4>Wyszukaj</h4>
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ISBN"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PagesMin"></label>
                <input asp-for="PagesMin" class="form-control" />
                <span asp-validation-for="PagesMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PagesMax"></label>
                <input asp-for="PagesMax" class="form-control" />
                <span asp-validation-for="PagesMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publisher"></label>
                <input asp-for="Publisher" class="form-control" />
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category"></label>
                <select asp-for="Category" class="form-control">
                    @foreach (var i in Model.Categories)
                    {
                        <option value="@i.Name">@i.Name</option>
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ById"></label>
                <input asp-for="ById" class="form-control" />
                <span asp-validation-for="ById" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Wyszukaj</button>
            </div>
        </form>
    </div>
</div>