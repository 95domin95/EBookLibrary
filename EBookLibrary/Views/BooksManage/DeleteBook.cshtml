@model EBookLibraryData.Models.ViewModels.BooksManage.DeleteBookViewModel

<div class="row text-center">
    <div class="col-xs-12 col-sm-10 col-md-6 col-lg-4 col-sm-offset-1 col-md-offset-3 col-lg-offset-4">
        <form asp-controller="BooksManage" asp-action="DeleteBook" method="post">
            <h4>Usuń</h4>
            <div class="form-group">
                <label asp-for="Id"></label>
                <input asp-for="Id" class="form-control" />
