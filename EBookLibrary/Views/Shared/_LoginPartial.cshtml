@using EBookLibraryData.Models

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@UserManager.GetUserName(User) <span class="caret"></span></a>
        <ul class="dropdown-menu">
            @if (User.IsInRole("Admin"))
            {
                <li role="separator" class="divider"></li>
                <li><a asp-controller="BooksManage" asp-action="AddBook">Dodaj nową książkę</a></li>
                <li><a asp-controller="BooksManage" asp-action="UpdateBook">Modyfikuj dane książki</a></li>
                <li><a asp-controller="BooksManage" asp-action="DeleteBook">Usuń książkę</a></li>
                <li><a asp-controller="BooksManage" asp-action="SelectBook">Wyszukaj książki</a></li>
            }
            <li role="separator" class="divider"></li>
            <li><a asp-controller="Account" asp-action="Logout">Wyloguj</a></li>
        </ul>
    </li>
}
else
{
    <li><a asp-controller="Account" asp-action="Login">Zaloguj</a></li>
    <li><a asp-controller="Account" asp-action="Register">Rejestracja</a></li>
}