@model EBookLibraryData.Models.ViewModels.AccountManage.ChangePasswordViewModel

@{
    Layout = "_ManageAccountLayout";
}

<div class="row">
    <div class="col-xs-12 col-sm-10 col-md-6 col-lg-4 col-sm-offset-1 col-md-offset-3 col-lg-offset-4">
        <h3>@ViewData["Title"]</h3>
        <form asp-controller="AccountManage" asp-action="AccountManage" method="post">
            <div class="form-group">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="button btn btn-primary">Aktualizuj hasło</button>
        </form>
    </div>
</div>

@if (Model.ChangedSuccessfully)
{
    <div class="row pt-3 pl-3">
        <div class="col-xs-12">
            <div class="alert alert-success" role="alert">
                @Model.ChangedSuccess
            </div>
        </div>
    </div>
}
else if (Model.ChangedError)
{
    <div class="row pt-2 pl-3">
        <div class="col-xs-12">
            <div class="alert alert-danger" role="alert">
                @Model.ChangedFailed
            </div>
        </div>
    </div>
}
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
