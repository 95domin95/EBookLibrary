@model EBookLibraryData.Models.ViewModels.AccountManage.LoanHistoryViewModel

@{
    Layout = "_ManageAccountLayout";
}
<h3>@ViewData["Title"]</h3>
@if (Model.LoanHistories != null)
{
    <table id="table" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                @foreach (var column in Model.ColumnNames)
                {
                    <th>@column</th>
                }
            </tr>
        </thead>
        <tbody>
            @{ int counter = 0;}
            @foreach (var loanHistory in Model.LoanHistories)
            {
                counter = counter + 1;
            <tr>
                <td>@counter</td>
                <td><img class="book-covering-image-table" src="~/images/BookCovering/@loanHistory.Book.CoveringPath" /></td>
                <td>@loanHistory.Book.Title</td>
                <td>@loanHistory.LoanDate</td>
                <td>@loanHistory.ReturnDate</td>
                <td>
<form asp-controller="Home" asp-action="BookPreview" method="post">
    <Button type="submit" class="btn btn-primary" name="BookId" value="@loanHistory.Book.BookId">
        <span class="fa fa-info"></span>
    </Button>
</form>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        Brak elementów do wyświetlenia.
    </div>
}