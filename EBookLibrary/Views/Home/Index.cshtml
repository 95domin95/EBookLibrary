@model EBookLibraryData.Models.ViewModels.Home.IndexViewModel
@if (Model.LoggedOut)
{
    <div class="col-xs-12">
        <div class="alert alert-success" role="alert">
            Zostałeś wylogowany
        </div>
    </div>
    Model.LoggedOut = false;
}
<div class="row">
    <div class="col-sm-12 col-md-6">
        <h4>Najnowsze</h4>
        <div id="most-recent-indicators" class="carousel slide carousel-index" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.MostRecent.Count(); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#most-recent-indicators" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#most-recent-indicators" data-slide-to="@i"></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.MostRecent.Count(); i++)
                {
                    if (i == 0)
                    {

                <div class="carousel-item active">
                    <img class="carousel-book-image" style="height: 45rem !important;" src="~/images/BookCovering/@Model.MostRecent.ElementAt(i).CoveringPath" alt="Okładka">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@Model.MostRecent.ElementAt(i).Title</h5>
                        <p>
                            Autorzy:
                            @foreach (var author in Model.MostRecent.ElementAt(i).BookAuthors)
                            {
                                <text>@author.Author.Name</text>
                            }
                        </p>
                        <p>Katgoria: @Model.MostRecent.ElementAt(i).Category.Name</p>
                        <form asp-controller="Home" asp-action="BookPreview" method="post">
                            <Button type="submit" class="btn btn-primary" name="BookId" value="@Model.MostRecent.ElementAt(i).BookId">Szczegóły</Button>
                        </form>
                    </div>
                    </div>
                    }
                    else
                    {
                    <div class="carousel-item">
                        <img class="carousel-book-image" style="height: 45rem !important;" src="~/images/BookCovering/@Model.MostRecent.ElementAt(i).CoveringPath" alt="Okładka">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@Model.MostRecent.ElementAt(i).Title</h5>
                            <p>
                                Autorzy:
                                @foreach (var author in Model.MostRecent.ElementAt(i).BookAuthors)
                                {
                                    <text>@author.Author.Name</text>
                                }
                            </p>
                            <p>Katgoria: @Model.MostRecent.ElementAt(i).Category.Name</p>
                            <form asp-controller="Home" asp-action="BookPreview" method="post">
                                <Button type="submit" class="btn btn-primary" name="BookId" value="@Model.MostRecent.ElementAt(i).BookId">Szczegóły</Button>
                            </form>
                        </div>
                    </div>
                    }
                    }
                </div>
            <a class="carousel-control-prev" href="#most-recent-indicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#most-recent-indicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-sm-12 col-md-6">
        <h4>Najchętniej wyporzyczane</h4>
        <div id="most-popular-indicators" class="carousel slide carousel-index" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.MostPopular.Count(); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#most-popular-indicators" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#most-popular-indicators" data-slide-to="@i"></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.MostPopular.Count(); i++)
                {
                    if (i == 0)
                    {

                        <div class="carousel-item active">
                                <img class="d-block w-100 h-100" style="height: 45rem !important;" src="~/images/BookCovering/@Model.MostPopular.ElementAt(i).CoveringPath" alt="Okładka">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@Model.MostPopular.ElementAt(i).Title</h5>
                                    <p>
                                        Autorzy:
                                        @foreach (var author in Model.MostPopular.ElementAt(i).BookAuthors)
                                        {
                                            <text>@author.Author.Name</text>
                                        }
                                    </p>
                                    <p>Katgoria: @Model.MostPopular.ElementAt(i).Category.Name</p>
                                    <form asp-controller="Home" asp-action="BookPreview" method="post">
                                        <Button type="submit" class="btn btn-primary" name="BookId" value="@Model.MostPopular.ElementAt(i).BookId">Szczegóły</Button>
                                    </form>
                                </div>
                            </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100 h-100" style="height: 45rem !important;" src="~/images/BookCovering/@Model.MostPopular.ElementAt(i).CoveringPath" alt="Okładka">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@Model.MostPopular.ElementAt(i).Title</h5>
                                <p>
                                    Autorzy:
                                    @foreach (var author in Model.MostPopular.ElementAt(i).BookAuthors)
                                    {
                                        <text>@author.Author.Name</text>
                                    }
                                </p>
                                <p>Katgoria: @Model.MostPopular.ElementAt(i).Category.Name</p>
                                <form asp-controller="Home" asp-action="BookPreview" method="post">
                                    <Button type="submit" class="btn btn-primary" name="BookId" value="@Model.MostPopular.ElementAt(i).BookId">Szczegóły</Button>
                                </form>
                            </div>
                            </div>
                            }
                        }
                        </div>
            <a class="carousel-control-prev" href="#most-popular-indicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#most-popular-indicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <script src="~/js/index.js"></script>
</div>