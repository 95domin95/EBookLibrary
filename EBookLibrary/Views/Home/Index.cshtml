@model EBookLibraryData.Models.ViewModels.Home.IndexViewModel
<div class="row">
    @if (Model.LoggedOut)
    {
        <div class="col-xs-12">
            <div class="alert alert-success" role="alert">
                Zostałeś wylogowany
            </div>
        </div>
        Model.LoggedOut = false;
    }
    <div class="col-sm-12 col-md-6">
        <h4>Najnowsze</h4>
        <div id="most-recent-indicators" class="carousel slide carousel-index" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.MostRecent.Count(); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#most-recent-indicators" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#most-recent-indicators" data-slide-to="@i"></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.MostRecent.Count(); i++)
                {
                    if (i == 0)
                    {

                        <div class="carousel-item active">
                            <div class="card">
                                <img class="card-img-top carousel-book-image" src="~/images/BookCovering/@Model.MostRecent.ElementAt(i).CoveringPath" alt="Okładka">
                                <div class="card-body">
                                    <h5 class="card-title">@Model.MostRecent.ElementAt(i).Title</h5>
                                    <p class="card-text">
                                        Autorzy:
                                        @foreach (var author in Model.MostRecent.ElementAt(i).BookAuthors)
                                        {
                                            <text>@author.Author.Name</text>
                                        }
                                    </p>
                                    <p class="card-text">Katgoria: @Model.MostRecent.ElementAt(i).Category.Name</p>
                                    <form asp-controller="Home" asp-action="BookPreview" method="post">
                                        <Button type="submit" class="btn btn-primary" name="BookId" value="@Model.MostRecent.ElementAt(i).BookId">Szczegóły</Button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <div class="card">
                                <img class="card-img-top carousel-book-image" src="~/images/BookCovering/@Model.MostRecent.ElementAt(i).CoveringPath" alt="Okładka">
                                <div class="card-body">
                                    <h5 class="card-title">@Model.MostRecent.ElementAt(i).Title</h5>
                                    <p class="card-text">
                                        Autorzy:
                                        @foreach (var author in Model.MostRecent.ElementAt(i).BookAuthors)
                                        {
                                            <text>@author.Author.Name</text>
                                        }
                                    </p>
                                    <p class="card-text">Katgoria: @Model.MostRecent.ElementAt(i).Category.Name</p>
                                    <form asp-controller="Home" asp-action="BookPreview" method="post">
                                        <Button type="submit" class="btn btn-primary" name="BookId" value="@Model.MostRecent.ElementAt(i).BookId">Szczegóły</Button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#most-recent-indicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#most-recent-indicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
